{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "lint": "eslint src/",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply week12-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply week12-db --remote"
  },
  "dependencies": {
    "@week12/shared": "workspace:*",
    "hono": "^4.7.4",
    "jose": "^6.0.1",
    "zod": "^3.24.2",
    "@hono/zod-validator": "^0.5.0",
    "nanoid": "^5.1.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250124.2",
    "typescript": "^5.7.3",
    "wrangler": "^4.2.0",
    "vitest": "^3.0.5",
    "eslint": "^9.19.0"
  }
}
